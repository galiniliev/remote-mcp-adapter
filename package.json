{
  "name": "remote-mcp-adapter",
  "version": "1.0.0",
  "description": "Transport adapter that bridges local STDIO MCP servers to remote HTTP+SSE/Streamable HTTP endpoints",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "json-rpc",
